{
  "extends": [
    "config:base",
    "docker:pinDigests",
    ":gitSignOff",
    ":automergeDigest"
  ],
  "packageRules": [
    {
      "paths": ["+(docker-compose.yml)"],
      "pinDigests": false
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["\\.yml$", "\\.yaml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s+\\S+:\\s+\"?(?<currentValue>[^\"]*?)\"?\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}
